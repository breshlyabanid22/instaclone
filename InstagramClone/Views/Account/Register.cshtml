@model InstagramClone.ViewModels.RegisterViewModel;
@{
    ViewData["Title"] = "Login";
}

<div class="container w-50 mx-auto mt-5 bg-white rounded-3 shadow-lg py-3 justify-content-center">
    <h1 class="text-center">Sign Up </h1>
    <hr />
    <div class="mx-lg-4 py-3">
        <form id="registerForm" asp-action="Register" method="post" class="gap-3 d-flex flex-column">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            <div class="d-flex gap-xl-3">
                <div class="d-flex flex-column flex-grow-1">
                    <label asp-for="UserName" class="form-label ">Username</label>
                    <input asp-for="UserName" class="form-input w-full px-2 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column flex-grow-1">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-input w-full px-2 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex flex-column">
                <label asp-for="Bio" class="form-label ">Bio</label>
                <input asp-for="Bio" class="form-input w-full px-2 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" />
            </div>
       
            <div class="d-flex gap-xl-3">
                <div class="d-flex flex-column flex-grow-1">
                    <label asp-for="Password" class="form-input"></label>
                    <input asp-for="Password" class="form-input w-full px-2 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column flex-grow-1">
                    <label asp-for="ConfirmPassword" class="form-input"></label>
                    <input asp-for="ConfirmPassword" class="form-input w-full px-2 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button id="registerButton" type="submit" class="btn btn-primary">Create Account</button>
        </form>       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('registerForm').addEventListener('submit', function () {
        const button = document.getElementById('registerButton');
        button.disabled = true;
        button.textContent = 'Creating Your Account...';
        // Optional: add visual feedback with Tailwind CSS classes
        button.classList.add('opacity-50', 'cursor-not-allowed');
        });
    </script>
}