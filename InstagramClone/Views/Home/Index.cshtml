@model List<InstagramClone.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-auto max-w-4xl  mt-8 p-6 bg-white rounded-xl shadow-lg">
   <div class="flex justify-content-between align-items-center mb-6">
       <h1 class="text-3xl font-bold text-gray-800">Latest Posts</h1>
        <a asp-controller="Post" asp-action="Create" class="px-4 py-2 bg-blue-500 text-white font-bold rounded-lg hover:bg-blue-700 transition duration-300">Create Post</a>
   </div>
    @if(Model.Count == 0)
    {
        <p class="text-gray-500 text-center py-10">No posts have been created yet.</p>
    }else
    {
      <div class="space-y-6">
            @foreach (var post in Model)
            {
                <div class="p-6 bg-gray-50 rounded-lg shadow-inner border border-gray-200">
                    <div class="flex align-items-center mb-4">
                        <div class="w-12 h-12 bg-gray-300 rounded-full flex-shrink-0">
                            @* Placeholder *@   
                        </div>
                        <div class="ml-4">
                            <span class="text-lg font-semibold text-gray-900">@post.User?.FullName</span>
                            <span class="block text-sm text-gray-500">
                                Posted on @post.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                            </span>
                        </div>
                    </div>
                    <p class="text-gray-700 mb-4">@post.Content</p>
                    <hr class="border-gray-300"/>
                    <div class="w-full py-3">
                        <img class="object-cover w-full rounded-lg" src=@post.ImageUrl alt="image-post"/>
                    </div>
                    <hr class="border-gray-300"/>
                    <div class="mt-4 flex align-items-center space-x-4">
                        <button class="flex align-items-center text-gray-600 hover:text-blue-500 transition-colors">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
                            <span>Like</span>
                        </button>
                        <button class="flex align-items-center text-gray-600 hover:text-blue-500 transition-colors">
                            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path></svg>
                            <span>Comment</span>
                        </button>
                    </div>
                </div>
            }
      </div>
    }

</div>
