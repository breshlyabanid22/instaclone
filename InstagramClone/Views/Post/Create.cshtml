
@model InstagramClone.ViewModels.PostViewModel;

@{
    ViewData["Title"] = "Create Post";
}
<div class="d-flex flex-column">
    <h1 class="fw-bold text-lg">Create Post</h1>
    <div>
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="d-flex flex-column g-2">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
            <div class="form-group d-flex flex-column gap-2">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control"/>
                <span asp-validation-for="Content"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl">Upload Photo</label>
                <input type="file" asp-for="ImageUrl" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary my-4">Create Post</button>
        </form>
    </div>
</div>
